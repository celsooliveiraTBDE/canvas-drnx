    <p>Explore Projects</p>
</div>


<div class="container all-projects-container">
    <div class="projects">


{{#each dbProject}}

	<article class=" bg-white pa3 b--black-10 project-card">

            <div class="tc project-portfolio">
                <div class="img-top hide-child dim">
                    <a href="/project/{{id}}">
                        <img src="assets/images/cocktail-ph-1.jpg" class=" dt db project-drink">
                        <span class="f6 ph3 pv2 mb2 black child bg-white" id="view-project-btn">VIEW PROJECT</span>
                    </a>
                </div>

                <img src="assets/images/baran.jpg" class="br-100 h3 w3 project-user grow">

                <h1 class="f4">{{this.project_name}}</h1>

                <hr class="mw7 bb b--black-10">
            </div>

            <p class="lh-copy measure center f6 black-70 project-info">

               {{this.description}}

            </p>
            


        </article>
