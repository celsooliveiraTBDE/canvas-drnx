<div class="project-content">
    <header class=" black-80 tc pv2 avenir">

        <nav class=" tc mw9 center mt1">
            <a class="f6 f7-l link bg-animate black-80 hover-bg-lightest-blue dib  ph4-l fl" href="/">CANVAS</a>
            <a class="f6 f7-l link bg-animate black-80 hover-bg-light-purple dib  ph4-l" href="/">home</a>
            <a class="f6 f7-l link bg-animate black-80 hover-bg-light-green dib  ph4-l" href="/users">drink makers</a>
            <a class="f6 f7-l link bg-animate black-80 hover-bg-light-blue dib  ph4-l" href="/projects" id="nav-projects">projects</a>
            <a class="f6 f7-l link bg-animate black-80 hover-bg-light-pink dib  ph4-l" href="#">about</a>
            <a class="f6 f7-l link bg-animate black-80 hover-bg-light-yellow dib  ph4-l" href="#">contact</a>

            {{> login-modal}}
        </nav>

    </header>

    <div class="container project-container">
        <section class="mw7 center sans-serif">
            <h2 class=" fw1 ph3 ph0-l"></h2>

            <article class=" b--black-10">
                <div class="db pv4 ph3 ph0-l no-underline black" href="#0">
                    <div class="flex flex-column flex-row-ns">
                        
                        <div class="pr3-ns mb4 mb0-ns ">
                            <img src={{imageUrl}} class="db" id="project-img" alt="">
                        </div>
                        
                        <div class="w-100 w-60-ns pl3-ns" id="project-info">
                            <h1 class="f3 fw1 mt0 lh-title" id="project-title">{{projectName}}</h1>
                            <p class="f6 f5-l lh-copy">INGREDIENTS</p>
                            <p>{{ingredient_1}}</p>
                            <p>{{ingredient_2}}</p>
                            <p>{{ingredient_3}}</p>
                            <p>{{ingredient_4}}</p>
                            <p class="f6 lh-copy mv0">By {{username}}</p>
                            <br><br><br>

                            {{> rating-stars}}
                            <a class="f6 link grow ph3 pv2 mb2 dib black center" id="back-btn" href="#">BACK THIS PROJECT</a>
                        </div>

                    </div>
                </div> 
            </article>
        </section>


    </div>


</div>

